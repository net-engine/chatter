<!DOCTYPE html>
<html>
<head>
  <title>Chatter</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| -%>
  <div class="flash <%= key %>"><%= value %></div>
<% end -%>

<h3>
  <% if signed_in? %>
    <%= current_user.email %>
    <%= link_to "Sign out", sign_out_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign in", sign_in_path %>
  <% end %>
</h3>

<%= yield %>

</body>
</html>
